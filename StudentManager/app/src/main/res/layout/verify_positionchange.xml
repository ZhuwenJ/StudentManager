<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
<!--    修改标题——职位变动-->
    <include   android:id="@+id/dept" layout="@layout/title_bar"/>
    <TextView
        android:id="@+id/tx1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dept"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:text="姓名"
        android:textSize="20sp"/>
    <EditText
        android:id="@+id/depname"
        style="@style/button"
        android:layout_alignBottom="@+id/tx1"
        android:layout_toRightOf="@+id/tx1"
        android:layout_marginLeft="26.5sp"
        android:layout_width="300dp"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/tx2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tx1"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:text="学号"
        android:textSize="20sp"/>
    <EditText
        android:id="@+id/id"
        style="@style/button"
        android:layout_alignBottom="@+id/tx2"
        android:layout_toRightOf="@+id/tx2"
        android:digits="0123456789"
        android:layout_width="300dp"
        android:layout_marginLeft="26.5sp"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tx3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tx2"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:text="原职务"
        android:textSize="20sp"/>
    <EditText
        android:id="@+id/originposition"
        style="@style/button"
        android:layout_width="280dp"
        android:layout_alignBottom="@+id/tx3"
        android:layout_toRightOf="@+id/tx3"
        android:digits="0123456789"
        android:layout_marginLeft="26.5sp"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tx4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tx3"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:text="职务变更为"
        android:textSize="20sp"/>
    <EditText
        android:id="@+id/introduction"
        style="@style/button"
        android:layout_width="240dp"
        android:layout_alignBottom="@+id/tx4"
        android:layout_toRightOf="@+id/tx4"
        android:layout_marginLeft="26.5sp"
        android:textSize="20sp"/>
    <Button
        android:id="@+id/btn_agree"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="同意"
        android:background="@android:color/holo_blue_light"
        android:layout_below="@id/introduction"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        />
    <Button
        android:id="@+id/btn_refuse"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="否决"
        android:background="@android:color/holo_red_light"
        android:layout_below="@id/btn_agree"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        />
    <include layout="@layout/bottom_two" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--    标题改为活动-->
    <include layout="@layout/title_bar"/>

    <TextView
        android:id="@+id/act_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:gravity="left"
        android:text="活动名称：考试"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/hold_dep"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:gravity="left"
        android:text="主办部门：体育部"
        android:textSize="18sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/assist_dep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="60dp"
            android:text="协同部门："
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:orientation="vertical"/>
    </LinearLayout>

    <TextView
        android:id="@+id/peo_count"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:gravity="left"
        android:text="人          数：  10"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/start_time"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:gravity="left"
        android:text="开始时间： 2019-11-23 10：00"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/end_time"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:gravity="left"
        android:text="结束时间：2019-11-23 16:00"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/location"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:gravity="left"
        android:text="地点：南校区操场"
        android:textSize="18sp" />
</LinearLayout>
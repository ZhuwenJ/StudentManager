<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include  android:id="@+id/title"
        layout="@layout/department_title_bar"/>
    <include
        android:id="@+id/click"
        layout="@layout/department_click_chairman"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/underline"
        android:layout_height="60dp">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="    申请增加部门"
            android:textSize="18sp"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_increase"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_marginLeft="195dp"
            android:layout_marginTop="15dp"
            android:button="@null"
            android:drawableTop="@drawable/ic_right" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/underline"
        android:layout_height="60dp">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="    申请罢免部门"
            android:textSize="18sp"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_decrease"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_marginLeft="195dp"
            android:layout_marginTop="15dp"
            android:button="@null"
            android:drawableTop="@drawable/ic_right" />
    </LinearLayout>
</LinearLayout>